{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "components": ["./src/components"],
      "utils": ["./src/utils"],
      "types": ["./src/types"],
      "hooks": ["./src/hooks"]
    }
  },
  "include": ["src", "vite.config.ts"]
}